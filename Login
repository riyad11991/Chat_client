    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {

        
            if(txtUser.getText().isEmpty()||txtpass.getText().isEmpty()){
                JOptionPane.showMessageDialog(this,"UserName or password Blank");
            }
            else {
                
                String username=txtUser.getText();
                String Password=txtpass.getText();
                String query="SELECT * FROM `user` WHERE `uname`=? AND `password`=?";
                Connection con = DriverManager.getConnection("jdbc:mysql://localhost/userrejistration","root","");
                 pst=con.prepareStatement("select *from user where username=? and password=?");
            
                  pst.setString(1, username);
                  pst.setString(2, Password);
                  
                  rs=pst.executeQuery();
       
          if(rs.next()){
           sd c =new sd();
           
           c.setVisible(true);
       }
       else
       {
           JOptionPane.showMessageDialog(this,"User Name or Pasword dont match");
           txtUser.setText("");
           txtpass.setText("");
           txtUser.requestFocus();
           
       }
       }
            
    
            
          
        } catch (SQLException ex) {
            Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

