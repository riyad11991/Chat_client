    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
       try{
           String query="INSERT INTO `user`(`fname`, `lname`, `ename`, `phone`, `uname`, `gender`, `password`) VALUES (?,?,?,?,?,?,?)";
        
           con=DriverManager.getConnection("jdbc:mysql://localhost/userrejistration","root","");
           pst=con.prepareStatement(query);
           pst.setString(1, txtFname.getText());
           pst.setString(2, txtLname.getText());
           pst.setString(3, txtEmail.getText());
           pst.setString(4, txtmobile.getText());
           pst.setString(5, txtuname.getText());
           pst.setString(6, cmbGender.getSelectedItem().toString());
           pst.setString(7, txtpassword.getText());
           pst.executeUpdate();
          JOptionPane.showMessageDialog(null,"Rejistration SUCCESSFULLY");
          
           rs=pst.executeQuery();
       
       if(rs.next()){
           Chat_client c =new Chat_client();
           
           c.setVisible(true);
       }
       else
       {
           JOptionPane.showMessageDialog(this,"User Name or Pasword dont match");
           
           
       }
       }   
          catch(Exception ex){
         JOptionPane.showMessageDialog(null, ex);
       }
           
    }//GEN-LAST:event_jButton1ActionPerformed

